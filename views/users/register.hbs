<div class="container-fluid my-2">
    <div class="card text-white mx-auto pb-0 pt-2" style="max-width: 25rem">
        <h4>Register</h4>
    </div>
</div>


<div class="container-fluid">
    {{> user_messages}}
</div>

<form method="post", action="/users/register">
    <div class="container-fluid">
        <div class="form-group row justify-content-center">
            <label class="col-form-label col-sm-1 text-left font-weight-bold" for="firstName">First Name: </label>
            <div class="col-md-3">
                <input class="form-control" id="firstName" type="text" name="first" placeholder="Enter first name" minlength="2" required/>
            </div>
            <div class="col-sm-1"></div>
        </div>

        <div class="form-group row justify-content-center">
            <label class="col-form-label col-sm-1 text-left font-weight-bold" for="lastName">Last Name: </label>
            <div class="col-md-3">
                <input class="form-control" id="lastName" type="text" name="last" placeholder="Enter last name" minlength="2" required/>
            </div>
            <div class="col-sm-1"></div>
        </div>

        <div class="form-group row justify-content-center">
            <label class="col-form-label col-sm-1 text-left font-weight-bold" for="phone">Phone Number: </label>
            <div class="col-md-3">
                <input class="form-control" id="phone" type="tel" pattern="[0-9]{10}" name="phone" placeholder="Enter phone number" required/>
            </div>
            <div class="col-sm-1">
                <label class="text-left"><small>Format: 0123456789</small></label>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <label class="col-form-label col-sm-1 text-left font-weight-bold" for="email">Email: </label>
            <div class="col-md-3">
                <input class="form-control" id="email" type="email" name="email" placeholder="name@example.com" required/>
            </div>
            <div class="col-sm-1"></div>
        </div>

        <div class="form-group row justify-content-center">
            <label class="col-form-label col-sm-1 text-left font-weight-bold" for="password">Password: </label>
            <div class="col-md-3">
                <input class="form-control" id="password" type="password" name="password" placeholder="Password" minlength="10" required/>
            </div>
            <div class="col-sm-1"></div>
        </div>

        <div class="form-group row justify-content-center">
            <input class="btn btn-outline-light" type="submit" value="Submit">
        </div>
    </div>
</form>