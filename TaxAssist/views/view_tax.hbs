<img src="/assets/images/logo.png" alt="Application Logo" class="img-fluid center">

<div class="container-fluid">
    <div class="row row-cols-8 justify-content-center">
        <h3>{{ taxTitle }}</h3>
    </div>
    <div>
        <p>Receipts: {{ taxBody }}</p>
        <p>Deductions: {{ taxBody2 }}</p>
        <p>Key: {{ taxKey }}</p>
    </div>

    <div class="form-group row justify-content-center">
        <a class="mt-3 btn btn-outline-dark mb-1 mr-1"
           href="/taxes/edit?key={{ taxKey }}"><i data-feather="edit"></i> Edit</a>
        <a class="mt-3 btn btn-outline-dark mb-1 mr-1" data-toggle="modal" data-target="#DeleteConfirm"><i data-feather="trash-2"></i> Delete</a>

        <div class="modal fade" id="DeleteConfirm">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4>Delete Tax?</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h5>Are you sure you want to delete? This cannot be undone.</h5>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Close</button>
                        <a class="btn btn-outline-dark" href="/taxes/destroy?key={{ taxKey }}">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
