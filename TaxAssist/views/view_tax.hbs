{{> header }}
<h1>{{ title }}</h1>
<img src="/assets/images/logo.png" alt="Application Logo" class="img-fluid center">


<div class="container-fluid">
    <div class="row row-cols-8 justify-content-center">
        <h3>Business Name: {{ taxTitle }}</h3></div>
        <p>Receipts, Deductions: {{ taxBody }}</p>
        <p>Key: {{ taxKey }}</p>
        <p>
            <a href="/taxes/edit?key={{ taxKey }}"><i data-feather="edit"></i></a>
            <a href="/taxes/destroy?key={{ taxKey }}"><i data-feather="trash-2"></i></a>
        </p>
    </div>
</div>
