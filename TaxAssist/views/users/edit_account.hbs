<div class="container-fluid my-2">
    <div class="row justify-content-center">
        <h4>Edit Account</h4>
    </div>
</div>

<div class="container-fluid">
    {{> user_messages}}
</div>

<form method="post", action="/users/updateAccount">
    <div class="container-fluid">
        <div class="form-group row justify-content-center">
            <label class="col-form-label col-sm-1 text-left font-weight-bold" for="firstName">First Name: </label>
            <div class="col-md-3">
                <input class="form-control" id="firstName" type="text" name="first" placeholder="Enter first name" value="{{ userFirst }}" minlength="2" required/>
            </div>
            <div class="col-sm-1"></div>
        </div>

        <div class="form-group row justify-content-center">
            <label class="col-form-label col-sm-1 text-left font-weight-bold" for="lastName">Last Name: </label>
            <div class="col-md-3">
                <input class="form-control" id="lastName" type="text" name="last" placeholder="Enter last name" value="{{ userLast }}" minlength="2" required/>
            </div>
            <div class="col-sm-1"></div>
        </div>

        <div class="form-group row justify-content-center">
            <label class="col-form-label col-sm-1 text-left font-weight-bold" for="phone">Phone Number: </label>
            <div class="col-md-3">
                <input class="form-control" id="phone" type="tel" pattern="[0-9]{10}" name="phone" placeholder="Enter phone number" value="{{ userPhone }}" required/>
            </div>
            <div class="col-sm-1"><label class="text-left"><small>Format: 0123456789</small></label></div>
        </div>

        <div class="form-group row justify-content-center">
            <input class="mt-3 btn btn-outline-light" type="submit" value="Submit">
        </div>
    </div>
</form>