<div class="container-fluid my-2">
    <div class="row justify-content-center">
        <h4>Login</h4>
    </div>
</div>

<div class="container-fluid">
    {{> user_messages}}
</div>

<form method="post", action="/users/login">
    <div class="container-fluid">

        <div class="form-group row justify-content-center">
            <label class="col-form-label col-sm-1 text-left font-weight-bold" for="email">Email: </label>
            <div class="col-md-3">
                <input class="form-control" id="email" type="email" name="email" placeholder="name@example.com" required/>
            </div>
            <div class="col-sm-1"></div>
        </div>

        <div class="form-group row justify-content-center">
            <label class="col-form-label col-sm-1 text-left font-weight-bold" for="password">Password: </label>
            <div class="col-md-3">
                <input class="form-control" id="password" type="password" name="password" placeholder="Password" required/>
            </div>
            <div class="col-sm-1"></div>
        </div>

        <div class="form-group row justify-content-center">
            <input class="mt-3 btn btn-outline-light" type="submit" value="Submit">
        </div>
    </div>
</form>