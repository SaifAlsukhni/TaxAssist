<img src="/assets/images/logo.png" alt="Application Logo" class="img-fluid center">

<form method="post" action="/taxes/save">
    <div class="container-fluid">
        <input type="hidden" name="saveMethod"
               value="{{# if isCreate }}create{{ else }}update{{/ if }}"/>
        <div class="form-group row justify-content-center">
            <label class="col-form-label col-3 text-right font-weight-bold" for="key">Key: </label>
            <div class="col-9">
                <label class="col-form-label" name="key">{{ taxKey }}</label>
            </div>
            <input type="hidden" name="taxKey" value="{{ taxKey }}"/>
        </div>

        <div class="form-group row justify-content-center">
            <label class="col-form-label col-3 text-right font-weight-bold" for="title">Business: </label>
            <div class="col-9">
                <input class="form-control" type="text" name="title" placeholder="Enter business name" value="{{ taxTitle }}"/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <label class="col-form-label col-3 text-right font-weight-bold" for="body">Receipts: </label>
            <div class="col-9">
                <textarea class="form-control" rows=5 name="body" placeholder="Enter receipts"></textarea>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <label class="col-form-label col-3 text-right font-weight-bold" for="body2">Deductions: </label>
            <div class="col-9">
                <textarea class="form-control" rows=5 name="body2" placeholder="Enter deductions"></textarea>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <input class="mt-3 btn btn-outline-dark" type="submit" value="Submit">
        </div>
    </div>
</form>