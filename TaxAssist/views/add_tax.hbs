{{> header }}
<h1>{{ title }}</h1>
<img src="/assets/images/logo.png" alt="Application Logo" class="img-fluid center">

<form method="post" action="/taxes/save">
    <div class="container-fluid">
        <input type="hidden" name="saveMethod"
               value="{{# if isCreate }}create{{ else }}update{{/ if }}"/>
        <div class="form-group row justify-content-center">
            <div class="col-2 text-right font-weight-bold">
                <label class="col-form-label" for="key">Key: </label>
            </div>
            <div class="col-5">
                <label class="col-form-label" name="key">{{ taxKey }}</label>
            </div>
            <input type="hidden" name="taxKey" value="{{ taxKey }}"/>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-2 text-right font-weight-bold">
                <label class="col-form-label" for="title">Business: </label>
            </div>
            <div class="col-5">
                <input class="form-control" type="title" name="title" value="{{ taxTitle }}"/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-2 text-right font-weight-bold">
                <label class="col-form-label" for="body">Receipts: </label>
            </div>
            <div class="col-5">
                <textarea class="col5 form-control" rows=5 name="body"></textarea><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-2 text-right font-weight-bold">
                <label class="col-form-label" for="body">Deductions: </label>
            </div>
            <div class="col-5">
                <textarea class="col5 form-control" rows=5 name="body"></textarea><br/>
            </div>
        </div>


        <div class="form-group row justify-content-center">
            <input class="mt-3 btn btn-outline-dark" type="submit" value="Submit">
        </div>
    </div>
</form>