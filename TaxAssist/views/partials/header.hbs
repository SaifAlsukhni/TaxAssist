<header>
    <nav class="navbar navbar-expand-sm navbar-dark rounded-bottom" style="background-color: #103154">
        <a class="navbar-brand" href="/"><i data-feather="home"></i></a>
        <button class="navbar-toggler" type="button"
                data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle Navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <span class="navbar-text col text-left">{{ title }}</span>
            {{#unless loggedIn}}
                <a class="nav-item nav-link btn btn-outline-light col-auto m-1" href="/users/login">Login</a>
                <a class="nav-item nav-link btn btn-outline-light col-auto m-1" href="/users/register">Register</a>
            {{else}}
                <a class="nav-item nav-link btn btn-outline-light col-auto m-1" href="/taxes/all">View All</a>
                <a class="nav-item nav-link btn btn-outline-light col-auto m-1" href="/taxes/quick">Quick View</a>
                <a class="nav-item nav-link btn btn-outline-light col-auto m-1" href="/taxes/add">Add Tax Info</a>
                <a class="nav-item nav-link btn btn-outline-light col-auto m-1" href="/taxes/calendar">Calendar</a>

                <div class="dropdown">
                    <a class="nav-item nav-link btn btn-outline-light dropdown-toggle col-auto m-1" data-toggle="dropdown">
                        {{currentUser.fullName}}
                    </a>
                    <div class="dropdown-menu">
                        <a class="nav-item nav-link btn btn-outline-light col-auto m-1" href="/users/account">View Account</a>
                        <a class="nav-item nav-link btn btn-outline-light col-auto m-1" href="/users/logout">Log Out</a>
                    </div>
                </div>

            {{/unless}}
        </div>
    </nav>
</header>